<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:columnOrderPreserved="true"
    android:elevation="1dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >
    <LinearLayout
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        style="@style/Widget.AppCompat.Button"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/purchase_label"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/tvPurchaseId"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/purchase_example_id"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvPurchaseDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/purchase_date"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvPurchaseTime"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/purchase_hour"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="150dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:clickable="false"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            style="@style/Widget.AppCompat.Button"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/currency"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/tvPurchaseValue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/ticket_price_example"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:clickable="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/Widget.AppCompat.Button.Colored"
            >
            <TextView
                android:id="@+id/tvPurchaseStatus"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/purchase_payment_status"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



