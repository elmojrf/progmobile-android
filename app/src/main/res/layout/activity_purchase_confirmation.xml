<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".view.PurchaseConfirmation"
    >
    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:background="@drawable/form_transparency"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:orientation="vertical"
            >
            <TextView
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="40dp"
                android:text="@string/payment_information"
                android:textSize="32sp"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                />

            <GridLayout
                android:elevation="1dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <TableRow
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:clickable="false"
                        android:layout_height="match_parent"
                        android:layout_width="125dp"
                        android:text="@string/form_cardHolderName"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                    <TextView
                        android:id="@+id/tvCardHolderName"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/form_cardHolderName"
                        style="@style/Widget.AppCompat.Button"
                        />

                </TableRow>

                <TableRow
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    >
                    <TextView
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_width="125dp"
                        android:text="@string/form_cardNumber"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                    <TextView
                        android:id="@+id/tvCardNumber"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/form_cardNumber"
                        style="@style/Widget.AppCompat.Button"
                        />

                </TableRow>

                <TableRow
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    >
                    <TextView
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_width="125dp"
                        android:text="@string/form_valid"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                    <TextView
                        android:id="@+id/tvValid"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/form_valid"
                        style="@style/Widget.AppCompat.Button"
                        />

                </TableRow>
            </GridLayout>

            <LinearLayout
                android:elevation="1dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/form_transparency"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/tvEvent"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/event_example_name"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        />

                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10sp"
                    android:textSize="25sp"
                    android:text="@string/ticketType_information"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    />

                <LinearLayout
                    android:layout_height="700dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvTicketType"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        >
                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ticket_label_total_price"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_green_light"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:text="@string/currency"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/ticket_price_example"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_green_light"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <Button
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:onClick="conclude"
                        android:text="@string/button_conclude"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
